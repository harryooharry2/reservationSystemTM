# Production Environment Variables for Backend
# Copy this file to .env.production and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=10000

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.netlify.app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-2024

# Supabase Configuration
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
SUPABASE_ANON_KEY=your-production-anon-key

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_AUTH=5
RATE_LIMIT_MAX_RESERVATIONS=20
RATE_LIMIT_MAX_GENERAL=100

# Security Configuration
SECURITY_MONITORING_ENABLED=true
SECURITY_LOG_FILE=logs/security.log
SECURITY_ALERT_THRESHOLD_AUTH_FAILURES=5
SECURITY_ALERT_THRESHOLD_RATE_LIMIT_VIOLATIONS=3
SECURITY_ALERT_THRESHOLD_SUSPICIOUS_PATTERNS=2

# Database Configuration
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log 